{
  "name": "freecodecamp-product-landing-page",
  "version": "1.0.0",
  "description": "My solution to FreeCodeCamp's Build a Product Landing Page challenge",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write ./**/*.{html,json,css,md}",
    "purge-css": "node purge-css.js",
    "lint": "standard --fix",
    "start": "serve"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.19.0",
    "purgecss": "^1.4.1",
    "serve": "^11.2.0",
    "standard": "^14.3.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "fetch"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./**/*.{html,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "./**/*.js": [
      "standard --fix",
      "git add"
    ]
  }
}
